</audio>
<canvas id="snow"></canvas>
<div class="bg">
<main role="main" class="centerer">
    <div id="inputContainer">
            <input type="text" id="codeInput" class="input-group-text" placeholder="Sinu kood" />
    </div>
    <div>
        <button class="button" type="button" onclick="getName()">Kuva nimi</button>
    </div>
    <div id="responseContainer">
