<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Admin Panel - Families</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <main role="main" class="container my-5">
        {{#if isAdmin}}
        <div class="admin-container">
            {{> adminheader}}
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Family Management</h2>
                <button class="btn btn-primary btn-sm" onclick="openFamilyEditModal();">Add New</button>
            </div>
            <div class="table-responsive">
                <table class="table table-striped admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Members</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each families}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{size}}</td>
                            <td>
                                <button class="btn btn-primary btn-sm"
                                    onclick="openFamilyEditModal('{{id}}', '{{name}}');">Edit</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteFamily('{{id}}')">Delete</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Edit Family Modal -->
        <div class="modal fade" id="editFamilyModal" tabindex="-1" aria-labelledby="editFamilyModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editFamilyModalLabel">Edit Family</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editFamilyForm">
                            <div class="mb-3">
                                <label for="editFamilyId" class="form-label">ID</label>
                                <input type="text" class="form-control" id="editFamilyId" readonly disabled>
                            </div>
                            <div class="mb-3">
                                <label for="editFamilyName" class="form-label">Name</label>
                                <input type="text" class="form-control" id="editFamilyName">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="saveFamily()">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="alert alert-warning mt-5" role="alert">
            You do not have admin privileges.
        </div>
        {{/if}}
    </main>

    <!-- Custom JavaScript -->
    <script src="/js/admin.js"></script>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>